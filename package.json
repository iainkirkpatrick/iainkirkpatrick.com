{
  "name": "iainkirkpatrick.com",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "concurrently \"astro dev --port 3000\" \"bun functions\"",
    "functions": "bunx wrangler@latest dev --remote --env development",
    "start": "astro dev",
    "build": "astro check && astro build",
    "build:qa": "bun ./scripts/build-qa-embeddings.ts",
    "build:qa:prod": "CLF_VECTORIZE_INDEX=iainkirkpatrick bun ./scripts/build-qa-embeddings.ts",
    "build:qa:development": "CLF_VECTORIZE_INDEX=iainkirkpatrick-development bun ./scripts/build-qa-embeddings.ts",
    "vector:upsert:prod": "bunx wrangler@latest vectorize upsert iainkirkpatrick --file ./data/qa_vectorize.ndjson",
    "vector:upsert:development": "bunx wrangler@latest vectorize upsert iainkirkpatrick-development --file ./data/qa_vectorize.ndjson --env development",
    "deploy:worker:prod": "bunx wrangler@latest deploy --minify workers/index.ts",
    "deploy:worker:development": "bunx wrangler@latest deploy --minify workers/index.ts --env development",
    "deploy:pages": "bun ./scripts/deploy-pages.ts",
    "deploy:pages:prod": "bun run deploy:pages -- --branch main",
    "deploy:pages:development": "bun run deploy:pages -- --branch development",
    "deploy:prod": "bun run build && bun run build:qa:prod && bun run vector:upsert:prod && bun run deploy:worker:prod && bun run deploy:pages:prod",
    "deploy:development": "bun run build && bun run build:qa:development && bun run vector:upsert:development && bun run deploy:worker:development && bun run deploy:pages:development",
    "deploy-functions": "bun run deploy:worker:prod",
    "deploy-functions:development": "bun run deploy:worker:development",
    "preview": "astro preview",
    "astro": "astro",
    "unit": "bunx vitest"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/mdx": "^4.3.12",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^5.1.5",
    "@cloudflare/ai": "^1.2.2",
    "astro": "^5.16.4",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251205.0",
    "@tailwindcss/typography": "^0.5.19",
    "concurrently": "^9.2.1",
    "vitest": "^1.6.1",
    "wrangler": "^4.53.0"
  }

}